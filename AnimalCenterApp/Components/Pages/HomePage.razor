@page "/"
@inject NavigationManager NavigationManager

<style>
    body {
        background-color: #b3e5fc;
    }
    .custom-btn {
        color: #0277bd;
        border-color: #4fc3f7;
        background-color: transparent;
        transition: all 0.3s ease;
        padding: 0.6rem 2rem;
        font-weight: 500;
        font-size: 1rem;
    }

    .custom-btn:hover {
        background-color: #4fc3f7;
        color: white;
        border-color: #0288d1;
    }

    .footer {
        background-color: #b3e5fc;
        border-top: 2px solid #4fc3f7;
        color: #01579b;
        font-size: 0.95rem;
    }
</style>

<div class="d-flex flex-column min-vh-100">

    <!-- Main content -->
    <div class="container my-auto">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card custom-card mt-5">
                    <div class="card-body text-center p-5">
                        <h1 class="display-4 mb-3">🐾 Welcome to Animal Center</h1>
                        <p class="lead mb-4">
                            This application helps manage animal care tasks and volunteers in a structured and easy way.
                        </p>

                        <button class="btn custom-btn" @onclick="NavigateToLogin">
                            🔐&nbsp;&nbsp;Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span>
                📢 <strong>About:</strong> This is a web application for managing animal center tasks and volunteers effectively.
            </span>
        </div>
    </footer>
</div>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}
